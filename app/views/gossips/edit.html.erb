
<h1> Editer Article</h1>

<%= form_for @gossip do |f| %> 
    
    <div class="form-group">

    <label> Modifier le titre du gossip</label>

    <%= f.text_field :title, class: 'form-control' %>
    </div> 

    <div class="form-group">

    <label> Modifier le contenu du gossip</label>
    <%= f.text_area :content, class: 'form-control' %> 
    </div> 

    <div class="form-group">
        <button type="submit" class="btn btn-primary"> Modifier le gossip</button>
    </div> 

<% end %> 


